<%= form_with model: @task do |f| %>
  <%= f.label :title, { class: "form-label mt-3" } %>
  <%= f.text_field :title, { class: "form-control", placeholder: "Task title" } %>
  <%= f.label :details, { class: "form-label mt-3" } %>
  <%= f.text_field :details, { class: "form-control", placeholder: "Task description" } %>
  <% unless @task.new_record? %>
    <div class="form-check mt-3">
      <%= f.label :completed, { class: "form-label" } %>
      <%= f.check_box :completed, { class: "form-check-input" } %>
    </div>
  <% end %>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
